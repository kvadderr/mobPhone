<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobPhone.Views.Share">
  <ContentView.Content>
        <StackLayout Spacing="30" Orientation="Vertical" Margin="0, 0, 0, 0">

            <StackLayout Orientation="Horizontal" Margin="28, 0, 0, 0" Spacing="22">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer />
                </StackLayout.GestureRecognizers>
                <Image Source="back" />
                <Label Text="Открыть доступ" Style="{StaticResource BoldText}" FontSize="16"  />
            </StackLayout>

            <StackLayout>
                <Button Text="Тестирование" />
                <Button Text="Библиотека" />
                <Button Text="Повышение" />
            </StackLayout>

        </StackLayout>

    </ContentView.Content>
</ContentView>
                    <Button Clicked="Button_Clicked" Margin="0, 20, 0, 0" Text="Открыть доступ" Background="{StaticResource blueGradient}" TextTransform="None" BackgroundColor="#5242FF" CornerRadius="12" FontFamily="noto_sans_regular" TextColor="White"/>
                </StackLayout>

            </StackLayout>
        </ScrollView>

    </ContentView.Content>
</ContentView>